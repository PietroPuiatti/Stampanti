
<div class="jumbotron">
    <h1>Stampanti</h1>
    <p class="lead">Qui di seguito trovi la lista delle stampanti.</p>
</div>

<div>

    <table class="tabella" id="Table">
        <tr>
            <td class="firstrow"><b>Reparto</b></td>
            <td class="firstrow"><b>IP</b></td>
            <td class="firstrow"><b>Porta</b></td>
            <td class="firstrow"><b>Update</b></td>
            <td class="firstrow"><b>Delete</b></td>
        </tr>
        @foreach (var stampante in Model)
        {
         <tr>

            <td class="otherrows">@stampante.Nome</td>
            <td class="otherrows">@stampante.IP</td>
            <td class="otherrows">@stampante.Port</td>
            <td class="otherrows">
                @Html.ActionLink("Change", "Update", new { Id = stampante.Id })
            </td>
             <td class="otherrows">
                 @Html.ActionLink("Remove", "Delete", new { Id = stampante.Id })
             </td>
         </tr>
        }
    </table>
    <br />
    <div>
        <button>
            @Html.ActionLink("Aggiungi", "Create")
        </button>
    </div>

</div>
